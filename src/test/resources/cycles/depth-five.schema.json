{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/organization-medium",
  "type": "object",
  "definitions": {
    "department": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "manager": {
          "$ref": "#/definitions/employee"
        },
        "employees": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/employee"
          }
        }
      },
      "required": ["name"]
    },
    "employee": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "department": {
          "$ref": "#/definitions/department"
        },
        "supervisor": {
          "$ref": "#/definitions/employee"
        }
      },
      "required": ["id", "name"]
    }
  },
  "type": "object",
  "properties": {
    "company": {
      "type": "string"
    },
    "departments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/department"
      }
    }
  },
  "required": ["company"]
}